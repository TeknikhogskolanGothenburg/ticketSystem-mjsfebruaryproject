 
<div>
    <h2> All concerts  shown here </h2>
</div>

<h2> @Model.CurrentCategory </h2>

@{

    foreach (var ticket in Model.Tickets)

    {
        <div class="col -sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@ticket.ImageThumbnailUrl" alt="" />
                
                <div class="caption">
                    <h3 class="pull-right">@ticket.Price.ToString("c")</h3>
                    <h3>
                        <a>@ticket.Name</a>
                    </h3>
                    <p> @ticket.ShortDescription</p>
                </div>
            </div>
        </div>

    }
}

@using TicketEngineClassLibrary
@model Venue
@{
    ViewData["Title"] = "Enter New Venues To the database ";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="addvenue" method="post">
                <div class="form-group" method="post">
                    <label>Name</label>
                    <input class="form-control" id="NameTxt" required />
                    <small id="Info" class="form-text text-muted">Please enter a name for your Venue </small>
                </div>
                <div class="form-group" method="post">
                    <label>Address</label>
                    <input class="form-control" id="AddressTxt" required />
                    <small id="Info" class="form-text text-muted">Please enter the address </small>
                </div>

                <div class="form-group" method="post">
                    <label>City</label>
                    <input class="form-control" id="CityTxt" required />
                    <small id="Info" class="form-text text-muted">Please enter a name the city  </small>
                </div>
                <div class="form-group" method="post">
                    <label>Country</label>
                    <input class="form-control" id="CountryTxt" required />
                    <small id="Info" class="form-text text-muted">Please enter a name of the country </small>
                </div>
                <div class="form-group" method="post">
                    <button type="button" class="AddVenueBtn" id="AddVenueBtn" name="AddVenueBtn" onclick="myFunction()"> Creat Venue</button>
                </div>
            </form>
        </section>
    </div>
</div>

<script>
        function myFunction() {
            var dataType = 'application/json'

            var datalist = {
                VenueName: $("#NameTxt").val(),
                Address: $("#AddressTxt").val(),
                City: $("#CityTxt").val(),
                Country: $("#CountryTxt").val()
            }

            $.ajax({
                type: "POST",
                url: "http://localhost:54874/venue/",
                dataType: 'application/json',
                contentType: dataType,
                data: JSON.stringify(datalist),
                success: alertFunction()
            });

            document.getElementById("Create Venue ").reset();
        };
</script>
<script>
        function alertFunction() {
            alert(" You have added a new A new venue to the database ");
        }
</script>